<link rel="stylesheet" href="<c:url value="/assets/css/app.css"/>">
<script type="text/javascript" src="<c:url value="/assets/js/app.js?t=1"/>"></script>

<title>Image Upload Form</title>
</head>
<body style="background-image: url(<c:url value="/assets/image/cld-sample-skg.jpg"/>)">
	<div class="container mt-4">
		<a href="/springmvc/">Home</a> <a href="/springmvc/about">About</a> <a href="/springmvc/contact-us">Contact Us</a>
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<div class="card">
					<div class="card-body">
						<h3 class="text-center">Complex Form</h3>
						<div class="alert alert-danger" role="alert">
							<form:errors path="student.*" />
						</div>
						<form action="handle-image-upload" method="POST" enctype="multipart/form-data">
							<div class="mb-3">
								<label for="formFile" class="form-label">Upload Image</label> <input class="form-control" type="file"
									name="profile_image">
							</div>
							<button type="submit" class="btn btn-primary">Submit</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Optional JavaScript -->
	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
